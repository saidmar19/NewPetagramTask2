<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_contacto"
    android:layout_width="@dimen/cardview_dimens"
    android:layout_height="@dimen/cardview_dimens"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/layoutFoto"
            android:layout_width="@dimen/imagen_cardview"
            android:layout_height="@dimen/imagen_cardview"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/fotoMascota"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/perrito"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layoutFoto">

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_blanco"
                android:src="@drawable/whitebone"/>

            <TextView
                android:id="@+id/nombreMascota_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_mascota"
                android:textSize="@dimen/nombre_cardview"
                android:textStyle="bold"
                android:paddingLeft="@dimen/left"
                android:paddingTop="@dimen/left"/>
            <TextView
                android:id="@+id/ranking_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ranking_cradview"
                android:paddingLeft="@dimen/ranking_left"
                android:text="@string/raking_mascota"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_yellowbone"/>


        </LinearLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>